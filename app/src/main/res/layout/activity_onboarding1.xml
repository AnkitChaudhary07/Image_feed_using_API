<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="#B2DFDB">

    <ImageView
        android:id="@+id/onboarding1_welcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/welcome"
        android:layout_marginBottom="@dimen/_200sdp"/>

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_360sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:padding="@dimen/_10sdp"
        android:text="WELCOME TO..\nMEME STREAM....\nPlace where you can stream unlimited streams and share them with your can friends."
        android:textColor="#212121"
        android:textSize="@dimen/_18ssp"
        android:textStyle="italic" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:layout_alignParentBottom="true"
        android:background="#B2DFDB">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp">

            <ImageView
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:srcCompat="@drawable/ellipse1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_6sdp"
                android:text="Start"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="@dimen/_15ssp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_220sdp">

            <ImageView
                android:id="@+id/btnSkip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:srcCompat="@drawable/ellipse2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_1sdp"
                android:text="Skip"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="@dimen/_15ssp"/>
        </FrameLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>
