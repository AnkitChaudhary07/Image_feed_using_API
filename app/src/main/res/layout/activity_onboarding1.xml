<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="#B2DFDB">

    <ImageView
        android:id="@+id/onboarding1_welcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_181sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/welcome" />

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_300sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="0dp"
        android:padding="@dimen/_10sdp"
        android:text="MEME STREAM....\nPlace where you can stream unlimited streams and share them with your can friends."
        android:textColor="#212121"
        android:textSize="@dimen/_18ssp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginLeft="0dp"
                app:srcCompat="@drawable/ellipse1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:text="Start"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btnSkip"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                app:srcCompat="@drawable/ellipse2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="-8dp"
                android:text="Skip"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
